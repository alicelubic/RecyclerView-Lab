<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:id="@+id/layout1">


    <TextView
        android:id="@+id/textview_color1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#6b8e23"
        android:padding="10dp"
        android:text="     "
        android:layout_alignTop="@+id/textview_title1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textview_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Title Text"
        android:layout_toRightOf="@+id/textview_color1"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textview_desc1"
        android:layout_alignEnd="@+id/textview_desc1" />
    <TextView
        android:id="@+id/textview_desc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:text="Description Text"
        android:layout_below="@+id/textview_color1"
        android:layout_toRightOf="@+id/textview_color1"
        android:layout_toEndOf="@+id/textview_color1" />




</RelativeLayout>